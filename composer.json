{
    "name": "eihror/codeigniter-project",
    "description": "Start any project with Codeigniter",
    "type": "Development",
    "minimum-stability": "stable",
    "version": "v0.0.4",
    "homepage": "https://github.com/eihror/codeigniter-project",
    "license": "MIT",
    "require": {
        "php": ">=5.5.9",
        "codeigniter/framework": "^3.0",
        "cocur/slugify": "^2.0",
        "eihror/compress-image": "^0.0.4" 
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6"
    },
    "authors": [
        {
            "name": "Eihror",
            "email": "igor_gmelo@hotmail.com",
            "homepage": "http://www.igormelo.com",
            "role": "Developer"
        }
    ],
    "config": {
        "vendor-dir": "vendor"
    },
    "autoload": {
        "psr-4": {
            "Eihror\\codeigniter\\": "install/"
        }
    },
    "scripts" : {
        "post-create-project-cmd": [
            "Eihror\\codeigniter\\Installer::postInstall"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
